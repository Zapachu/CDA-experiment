{
  "compilerOptions": {
    "outDir": "./build",
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "esnext",
      "dom",
      "scripthost"
    ],
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "jsx": "react"
  },
  "include": [
    "."
  ],
  "exclude": [
    "build",
    "**/egret",
    "**/whuipo"
  ]
}
