{
  "compilerOptions": {
    "outDir": "./lib",
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "esnext",
      "dom",
      "scripthost"
    ],
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "jsx": "react"
  },
  "include": [
    "src/backend",
    "src/frontend"
  ]
}
