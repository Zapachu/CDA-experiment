{
  "compilerOptions": {
    "outDir": "./build",
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "esnext",
      "dom",
      "scripthost"
    ],
    "declaration": false,
    "sourceMap": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "baseUrl": "core",
    "paths": {
      "@dev/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "core",
    "game",
    "."
  ]
}