{
  "compilerOptions": {
    "outDir": "./build",
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "esnext",
      "dom",
      "scripthost"
    ],
    "declaration": false,
    "sourceMap": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "baseUrl": "lib",
    "paths": {
      "@dev/*": [
        "core/*"
      ]
    }
  },
  "include": [
    "lib",
    "."
  ],
  "exclude": [
    "**/script"
  ]
}