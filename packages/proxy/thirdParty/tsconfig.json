{
  "compilerOptions": {
    "outDir": "./build",
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "esnext",
      "dom"
    ],
    "declaration": false,
    "sourceMap": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "baseUrl": "src",
    "paths": {
      "@core/*": [
        "core/*"
      ]
    }
  },
  "include": [
    ".",
    "src"
  ]
}