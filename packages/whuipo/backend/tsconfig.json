{
  "compilerOptions": {
    "outDir": "../build",
    "module": "commonjs",
    "target": "es5",
    "lib": ["esnext"],
    "skipLibCheck": true,
    "declaration": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "downlevelIteration": true
  }
}

