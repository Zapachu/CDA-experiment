{
  "compilerOptions": {
    "outDir": "../build",
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "esnext",
      "dom",
      "scripthost"
    ],
    "skipLibCheck": true,
    "declaration": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "downlevelIteration": true
  }
}
