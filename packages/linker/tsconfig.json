{
  "compilerOptions": {
    "outDir": "./build",
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "esnext",
      "dom"
    ],
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "baseUrl": "src",
    "paths": {
      "@common": [
        "common"
      ],
      "@client-util": [
        "client/util"
      ],
      "@client-component": [
        "client/component"
      ],
      "@antd-component": [
        "client/component/AntDesign.tsx"
      ],
      "@client-context": [
        "client/context"
      ],
      "@server-util": [
        "server/util"
      ],
      "@server-service": [
        "server/service"
      ],
      "@server-model": [
        "server/model"
      ]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}